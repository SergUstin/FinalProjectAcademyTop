    <changeSet id="createTenantsTable" author="admin">
        <createTable tableName="tenants">
            <column name="id" type="INTEGER" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="full_name" type="VARCHAR(255)"/>
            <column name="phone_number" type="VARCHAR(255)"/>
            <column name="email" type="VARCHAR(255)"/>
            <column name="rating" type="BIGINT"/>
            <column name="data_registration" type="TIMESTAMP"/>
        </createTable>
    </changeSet>

    <changeSet id="createLandlordTable" author="admin">
        <createTable tableName="landlords">
            <column name="id" type="INTEGER" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="full_name" type="VARCHAR(255)"/>
            <column name="phone_number" type="VARCHAR(255)"/>
            <column name="email" type="VARCHAR(255)"/>
            <column name="rating" type="BIGINT"/>
            <column name="data_registration" type="TIMESTAMP"/>
        </createTable>
    </changeSet>

    <changeSet id="createApartmentsTable" author="admin">
        <createTable tableName="apartments">
            <column name="id" type="INTEGER" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="city" type="VARCHAR(255)"/>
            <column name="address" type="VARCHAR(255)"/>
            <column name="landlord_id" type="INTEGER">
                <constraints foreignKeyName="apartments_landlord_fk" references="landlords(id)"/>
            </column>
            <column name="tenant_id" type="INTEGER">
                <constraints foreignKeyName="apartments_tenant_fk" references="tenants(id)"/>
            </column>
        </createTable>
        <addNotNullConstraint tableName="apartments" columnName="landlord_id" columnDataType="INTEGER"/>
    </changeSet>
</databaseChangeLog>